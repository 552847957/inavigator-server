<?xml version="1.0" encoding="UTF-8"?>
<beans profile="unit-test"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="config-service-test-spring-context.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name='properties'>
            <props>
                <prop key="test.sqLiteService.localIncomingPath">
                    test/tmp/directory/sqlite/SQLiteServiceTest/localIncomingFile/
                </prop>
                <prop key="test.sqLiteService.localIncomingFile">
                    test/tmp/directory/sqlite/SQLiteServiceTest/localIncomingFile/phonebook.sqlite
                </prop>
                <prop key="test.sqLiteService.localWorkFolder">
                    test/tmp/directory/sqlite/SQLiteServiceTest/localWorkFolder/
                </prop>
                <prop key="test.sqLiteService.driverClassName">org.sqlite.JDBC</prop>
                <prop key="test.sqLiteService.url_in">jdbc:sqlite:${test.sqLiteService.localIncomingFile}</prop>
                <prop key="test.sqLiteService.url_out">jdbc:sqlite:${test.sqLiteService.localWorkFolder}</prop>
                <prop key="test.sqLiteService.initialSize">2</prop>
                <prop key="test.sqLiteService.maxActive">20</prop>
                <prop key="test.sqLiteService.maxIdle">5</prop>
                <prop key="test.sqLiteService.poolPreparedStatements">true</prop>
            </props>
        </property>
    </bean>

    <bean name="dataSourceIncome" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${test.sqLiteService.driverClassName}"/>
        <property name="url" value="${test.sqLiteService.url_in}"/>
        <property name="initialSize" value="${test.sqLiteService.initialSize}"/>
        <property name="maxActive" value="${test.sqLiteService.maxActive}"/>
        <property name="maxIdle" value="${test.sqLiteService.maxIdle}"/>
        <property name="poolPreparedStatements" value="${test.sqLiteService.poolPreparedStatements}"/>
        <property name="defaultAutoCommit" value="false"/>
    </bean>

    <bean name="sqLiteServiceTestBean" class="ru.sberbank.syncserver2.service.sql.SQLiteService">
        <property name="serviceContainer" ref="serviceContainerMockBean"/>
        <property name="localIncomingFile" value="${test.sqLiteService.localIncomingFile}"/>
        <property name="localWorkFolder" value="${test.sqLiteService.localWorkFolder}"/>
    </bean>

    <bean name="sqliteDataSourceHolderTestName"
          class="ru.sberbank.syncserver2.service.sql.sqlite.SQLiteDataSourceHolder">
        <property name="incomeDataSource" ref="dataSourceIncome"/>
    </bean>

</beans>