<?xml version="1.0" encoding="UTF-8"?>
<beans profile="unit-test"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="cache-diff-checker-service-test-spring-context.xml"/>

    <bean name="clusterManagerServiceTestBean" class="ru.sberbank.syncserver2.service.generator.ClusterManager">
        <property name="dbLogger" ref="dbLogService"/>
    </bean>
    <bean name="spyClusterManagerServiceTestBean" class="org.mockito.Mockito" factory-method="spy">
        <constructor-arg name="object" ref="clusterManagerServiceTestBean"/>
    </bean>

    <bean name="changeSetGeneratorServiceTestBean" class="ru.sberbank.syncserver2.service.generator.rubricator.ChangeSetGeneratorService">
        <property name="localFolder" value="test/tmp/directory/ChangeSetGeneratorServiceTest/tst"/>
        <property name="loadUpdatesSQL" value="select 1"/>
    </bean>
    <bean name="spyChangeSetGeneratorServiceTestBean" class="org.mockito.Mockito" factory-method="spy">
        <constructor-arg name="object" ref="changeSetGeneratorServiceTestBean"/>
    </bean>

</beans>