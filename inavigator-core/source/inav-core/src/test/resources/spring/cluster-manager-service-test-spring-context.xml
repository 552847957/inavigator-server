<?xml version="1.0" encoding="UTF-8"?>
<beans profile="unit-test"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="config-service-test-spring-context.xml"/>

    <bean name="serviceManagerServiceTestBean" class="ru.sberbank.syncserver2.service.core.ServiceManager">
        <property name="configSource" ref="dataSourceMockFactoryBean"/>
        <property name="configLoader" ref="configLoaderMockFactoryBean"/>
    </bean>
    <bean name="spyServiceManagerServiceTestBean" class="org.mockito.Mockito" factory-method="spy">
        <constructor-arg name="object" ref="serviceManagerServiceTestBean"/>
    </bean>


    <bean name="clusterManagerServiceTestBean" class="ru.sberbank.syncserver2.service.generator.ClusterManager">
        <property name="dbLogger" ref="dbLogService"/>
    </bean>
    <bean name="spyClusterManagerServiceTestBean" class="org.mockito.Mockito" factory-method="spy">
        <constructor-arg name="object" ref="clusterManagerServiceTestBean"/>
    </bean>

</beans>